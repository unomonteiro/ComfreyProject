<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="#bbDEDFDE"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/widget_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaDEDFDE"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/widget_img_launcher"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_icon_content_description"/>
        <TextView
            android:id="@+id/widget_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_small"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:paddingStart="@dimen/dimen8dp"
            android:paddingLeft="@dimen/dimen8dp"
            android:paddingEnd="@dimen/dimen8dp"
            android:paddingRight="@dimen/dimen8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/widget_empty_list_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen8dp"
            android:text="@string/tap_for_plants"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>