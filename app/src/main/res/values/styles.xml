<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardViewStyle">@style/CardView</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.SimpleCoordinatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="recycler_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dimen8dp</item>
        <item name="android:paddingBottom">@dimen/dimen8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="card_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen4dp</item>
        <item name="android:clickable">@bool/is_tablet</item>
        <item name="android:focusable">@bool/is_tablet</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="detail_image_style">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:contentDescription">@string/image_content_description</item>
    </style>

    <style name="detail_title_style" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingEnd">@dimen/dimen8dp</item>
        <item name="android:paddingStart">@dimen/dimen8dp</item>
    </style>

    <style name="detail_body_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen16dp</item>
        <item name="android:src">@drawable/ic_heart_outline</item>
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
